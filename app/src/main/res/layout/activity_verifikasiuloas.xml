<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".function.activity.VerifikasiuloasActivity">

    <TextView
        android:id="@+id/tv_title_verifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Verifikasi Kualitas Gambar"
        android:textSize="20sp"
        android:textStyle="italic"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageView
        android:id="@+id/iv_showimage_verifikasi"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:minHeight="200dp"
        android:scaleType="fitCenter"
        android:src="@drawable/take_photo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_verifikasi"></ImageView>

    <ImageView
        android:id="@+id/iv_getGallery_verifikasi"
        android:layout_marginTop="16dp"
        android:layout_width="60dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_showimage_verifikasi"
        app:layout_constraintStart_toStartOf="@+id/iv_showimage_verifikasi"
        app:layout_constraintTop_toBottomOf="@+id/iv_showimage_verifikasi"
        app:srcCompat="@drawable/upload_image2" />

    <Button
        android:id="@+id/btn_verifikasi_verifikasi"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="Verifikasi Kualitas"
        android:fontFamily="monospace"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/iv_getGallery_verifikasi"
        app:layout_constraintStart_toStartOf="@+id/iv_getGallery_verifikasi"
        app:layout_constraintTop_toBottomOf="@+id/iv_getGallery_verifikasi"></Button>

    <TextView
        android:id="@+id/tv_hasilTitle_verifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="monospace"
        android:text="Hasil Verifikasi"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_verifikasi_verifikasi" />

    <TextView
        android:id="@+id/tv_hasil_verifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="12dp"
        android:fontFamily="monospace"
        app:layout_constraintStart_toStartOf="@+id/tv_hasilTitle_verifikasi"
        app:layout_constraintTop_toBottomOf="@+id/tv_hasilTitle_verifikasi" />

    <Button
        android:id="@+id/btn_savegambar_verifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Simpan Gambar"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>